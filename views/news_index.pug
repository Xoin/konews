include news_header.pug
    // Top viewed content WIP
    highlights
        each val in top
            highlight
                div(class="name")
                    a(href="view/"+val.id) #{val.title} #{val.viewers}
    // news items
    news
        each item in items
            story
                div(class="icon")
                    div(class="forum-"+item.subforumId)
                div(class="time") #{item.createdAt}
                div(class="title")
                    a(href="view/"+item.id) #{item.id} #{item.title}
                div(class="comments") #{item.postCount}
                