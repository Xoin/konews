extends news_main.pug
block content
    div(class="section")
        div(class="article")
            h1 #{thread.title}
            div(class="by")
            p Posted by #{thread.user.username} on #{thread.date.Hour}:#{thread.date.Minute} #{thread.date.DayFull} #{thread.date.Date} #{thread.date.MonthFull}
            bbcode !{thread.posts[0].content}
        spacer
        h2 Comments (#{thread.postCount-1})
        replys
            each post in thread.posts
                if post.id != thread.posts[0].id
                    div(class="body")
                        bbcode !{post.content}
                        userinfo
                            user #{post.user.username}
                            time #{post.createdAt}