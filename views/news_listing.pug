news
    each item in items
        story
            div(class="icon")
                div(class="forum-"+item.subforumId)
            div(class="time") #{item.date.Hour}:#{item.date.Minute}
            div(class="title")
                a(href="view/"+item.id) #{item.title}
            div(class="comments") #{item.postCount-1}